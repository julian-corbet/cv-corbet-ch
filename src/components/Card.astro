---
import { Icon } from "astro-icon/components";
const { timeframe, title, description, url, tags, url_name, location, subtitle } =
  Astro.props;
---

<div class="card card-compact card-bordered bg-transparent w-full md:w-128 lg:w-160 hover:shadow-lg transition-all my-4">
  <div class="card-body">
    {title && (
      <div class="mb-2">
        <div class="flex justify-between items-start">
          <span class="inline-block uppercase card-title font-extrabold tracking-tighter md:text-2xl">{title}</span>
          {timeframe && (
            <span class="inline-block align-baseline shadow-sm px-3 py-0.5 rounded font-mono text-sm">
              {timeframe}
            </span>
          )}
        </div>
        <div class="text-left">
          {subtitle && <h2 class="italic text-base font-normal text-secondary">{subtitle}</h2>}
          {location && (
            <div class="flex items-center mt-1">
              <Icon name="carbon:location" class="w-4 h-4 mr-1" />
              <p class="text-sm  font-light text-secondary">{location}</p>
            </div>
          )}
        </div>
      </div>
    )}

    <div class="grid grid-cols-3 gap-4 place-items-center">
      <div class={`${title ? 'col-span-2' : (url ? 'col-span-2' : 'col-span-3')} ${!url && !timeframe ? 'self-start justify-self-start text-left col-span-3' : 'self-start justify-self-start text-left'}`}>
      <div class="${title ? 'col-span-2' : 'col-span-3'} self-start justify-self-start text-left">
        <article class="prose prose-lg md:prose-xl text-base leading-relaxed max-w-none font-normal text-justify hyphens-auto prose-p:last:mb-0">
          <Fragment set:html={description}></Fragment>
        </article>
        {Array.isArray(tags) && tags.length > 0 && (
          <div class="flex flex-wrap content-around gap-2 my-4">
            {tags.map((item) => (
              <span class="badge text-center inline-block align-middle w-max h-max text-sm  badge-outline shadow-md mb-1" :key={item}>{item}</span>
            ))}
          </div>
        )}
      </div>

      {!title && timeframe && (
        <div class="self-center justify-self-center">
          <div class="badge w-max h-max text-center badge-outline inline-block align-middle shadow-md font-mono">
            {timeframe}
          </div>
        </div>
      )}

      {url && (
        <div class="self-center justify-self-end">
          <a href={url} target="_blank" class="link link-hover text-sm text-right flex justify-center items-center">
            {url_name}
            {url && url !== "#" && url.trim() !== "" && <Icon name="carbon:link" class="w-4 h-4 ml-2" />}
          </a>
        </div>
      )}
    </div>
  </div>
</div>
