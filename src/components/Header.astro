---
import { Icon } from "astro-icon/components";
import * as about from "../pages/about/about.md";
import * as contacts from "../pages/contacts.md";
---

<header class="mx-auto pt-6 pb-2 relative">
  <article
    class="flex flex-col md:flex-col items-center gap-4 w-full max-w-2xl"
  >
    <div
      class="flex-shrink-0 w-20 md:w-24 rounded-full shadow-sm overflow-hidden"
    >
      <img
        alt="avatar"
        src="/profile.webp"
        class="grayscale-[50] hover:grayscale-0"
      />
    </div>

    <div class="text-left md:max-w-md mx-auto">
      <h1 class="text-3xl font-extrabold tracking-tight md:text-3xl relative">
        {about.frontmatter.name}
      </h1>
      <h2 class="text-lg mb-2 text-secondary">
        {about.frontmatter.designation}
      </h2>
      <div class="flex items-center md:justify-between mt-1 text-sm text-secondary">
        <span class="flex items-center">
          <Icon name="carbon:phone" class="w-4 h-4 mr-1" />
          {contacts.frontmatter.header.phone}
        </span>
        <span class="mx-2">|</span>
        <span class="flex items-center">
          <Icon name="carbon:location" class="w-4 h-4 mr-1" />
          {contacts.frontmatter.header.location}
        </span>
        <span class="mx-2">|</span>
        <span class="flex items-center">
          <Icon name="carbon:email" class="w-4 h-4 mr-1" />
          {contacts.frontmatter.header.email}
        </span>
      </div>
      <div class="flex items-center justify-between mt-1 text-sm text-secondary">
        <div class="flex items-center">
          <span class="mr-2">Let's grab coffee:</span>
          <Icon name="carbon:calendar" class="w-4 h-4 mr-1" />
          <a href={contacts.frontmatter.social.calendar} class="underline hover:no-underline text-green-600 mr-3" target="_blank">connect.corbet.ch</a>
          <span class="mr-2">|</span>
        </div>
        <div class="flex items-center">
          {
            Object.entries(contacts.frontmatter.social).filter(([key]) => key !== 'calendar').sort(([a], [b]) => a.localeCompare(b)).map(([platform, url]: [string, string]) => {
            // Map platform names to icon names
            const iconMap = {
              whatsapp: 'mdi:whatsapp',
              telegram: 'mdi:telegram',
              linkedin: 'mdi:linkedin',
              x: 'carbon:logo-x'
            };
              const iconName = iconMap[platform as keyof typeof iconMap] || 'carbon:add';
              return (
                <a href={url} class="mr-1 hover:scale-105 transition-transform" target="_blank" rel="noopener">
                {platform === 'signal' ? (
                  <img src="/signal.svg" alt="Signal Messenger" class="w-4 h-4 signal-icon" />
                ) : platform === 'matrix' ? (
                  <img src="/matrix.png" alt="Matrix" class="w-4 h-4 matrix-icon" />
                ) : platform === 'threema' ? (
                  <>
                    <img src="/threema.svg" alt="Threema" class="w-4 h-4 threema-icon threema-light" />
                    <img src="/threema-negative.svg" alt="Threema" class="w-4 h-4 threema-icon threema-dark hidden" />
                  </>
                ) : (
                  <Icon name={iconName} class="w-4 h-4" />
                )}
                </a>
              );
            })
          }
        </div>
      </div>
      </div>
    </div>
  </article>
</header>

<style>
  @media (max-width: 768px) {
    .flex-col.justify-end {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }
  }
</style>
